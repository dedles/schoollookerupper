<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  
	<div class="row">
		<div class="col s12">

			<div class="row">
			  <div class="input-field col s10">
			    <%= f.label :email, class: "active" %>
			    <%= f.email_field :email, autofocus: true %>
			  </div>
			</div>
			<div class="row">
			  <div class="input-field col s5">
			    <%= f.label :first_name, class: "active" %>
			    <%= f.text_field :first_name, autofocus: true %>
			  </div>
			  <div class="input-field col s5">
			    <%= f.label :last_name, class: "active" %>
			    <%= f.text_field :last_name, autofocus: true %>
			  </div>
			</div>

			<div class="row">
			  <div class="input-field col s10">
			    <%= f.label :password, class: "active" %>
			    <% if @validatable %>
						<%= f.password_field :password, autocomplete: "off", :placeholder => "Must be at least 8 characters" %>
			    <% else %>
				    <%= f.password_field :password, autocomplete: "off" %>
			    <% end %>
			  </div>
			</div>

			<div class="row">
			  <div class="input-field col s10">
			    <%= f.label :password_confirmation %>
			    <%= f.password_field :password_confirmation, autocomplete: "off" %>
			  </div>
			</div>

			<div class="row">
			  <div class="input-field col s3">
					<%= button_tag( :class => "btn") do %>
					  Sign Up <i class="material-icons">send</i>
					<% end %>
			  </div>
			</div>

		</div>
	</div>
<% end %>

<%= render "devise/shared/links" %>
