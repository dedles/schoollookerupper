<%= form_for([@school, @review]) do |f| %>
	<% if @review.errors.any? %>
	  <div id="error-content" class="card-panel red lighten-4">
	    <div class="row">
				<a id="button-dismiss"class="btn-floating btn-medium center teal lighten-3"><i class="material-icons">add</i></a>
	      <h5><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h5>
	    </div>
	    <div class="col s4">
	      <ul>
	      <% @review.errors.full_messages.each do |message| %>
	        <li><%= message %></li>
	      <% end %>
	      </ul>
	    </div>
	  </div>
	<% end %>
    
				
<div class="row">
	<div class="col s12">
		
		<div class="row">
		  <div class="input-field col s10">
		    <%# f.label :rating %>
		    <%# f.number_field :rating %>
		    <div id="star-rating"></div>
		  </div>
		</div>

		<div class="row">
		  <div class="input-field col s10">
		    <%= f.label :comment %>
		    <%= f.text_area :comment, class: "materialize-textarea" %>
		  </div>
		</div>
		
		<div class="row">
		  <div class="input-field col s3">
		    <%# f.submit "Log in", class: "btn" %>
				<%= button_tag( :class => "btn") do %>
				  Create <i class="material-icons">send</i>
				<% end %>
		  </div>
		</div>
		
	</div>
</div>
<% end %>
<script>
	$('#star-rating').raty({
		path: "https://s3.amazonaws.com/edu-depot/stars",
		scoreName: 'review[rating]'

	});
</script>
